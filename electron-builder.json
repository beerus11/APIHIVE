{
  "appId": "com.apihive.desktop",
  "productName": "APIHive",
  "files": [
    "dist/**"
  ],
  "directories": {
    "buildResources": "public",
    "output": "release"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon.png",
    "category": "public.app-category.developer-tools"
  },
  "win": {
    "target": "nsis",
    "icon": "public/icon.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
